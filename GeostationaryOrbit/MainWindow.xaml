        <TextBox x:Name="Results_textBox" HorizontalAlignment="Left" Height="95" Margin="10,98.88,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="390" IsReadOnly="True" FontFamily="Consolas"/>
