        <Label x:Name="label_Copy1" Content="Масса тела:" HorizontalAlignment="Left" Margin="10,40.96,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="BodyMass_textBox" HorizontalAlignment="Left" Height="23" Margin="112.84,43.92,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150.663" Text="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label x:Name="label_Copy2" Content="[масс Земли]" HorizontalAlignment="Left" Margin="268.503,40.96,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
